{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block navbar %}
    {% include '/navbar/navbarHome.html.twig' %}
{% endblock %}

{% block body %}

    <div class="container">

        {# first container welcome #}
        <div class="row d-flex justify-content-center mt-5 mb-5">
            {#<div class="col-md-4 text-center">
                <div class="mt-4 shadow font-italic rounded bg-white" id="card_hp">
                    #}{# ajouter app.user.name #}{#
                    <h2>Bonjour</h2>
                    <h3>Bienvenue sur BDTech'</h3>
                </div>
            </div>#}
        </div>

        {# second container carousel + count #}
        <div class="d-flex justify-content-center">
            <div class="jumbotron shadow pt-4 pb-4 pl-5" id="jumbo_home">
                <div class="row">
                    {#LEFT BLOCK#}
                    <div class="col-md-7 shadow" id="left-block">
                        <div class="card">
                            <div class="card-body" id="last_entries">
                                <h5 class="card-title font-italic text-center">Derniers ajouts : </h5>
                            </div>
                        </div>
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner bg-white" id="card_hp">
                                {% for bd in bds %}
                                    <div class="carousel-item {% if loop.first %} active {% endif %}">
                                        <img class="d-block w-100" src="/uploads/covers/{{ bd.filename }}"
                                             alt="{{ bd.slug }}" style="width: 445px; height: 599px">
                                    </div>
                                {% endfor %}
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    {#RIGHT BLOCK#}
                    <div class="col-md-4 ml-5">
                        <div class="row mb-5">
                            <div class="card">
                                <div class="card-body pt-4 shadow" id="card_bd_total">
                                    <h5 class="card-title mt-2 font-italic text-center">Bds : {{ total_bd|length }}</h5>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-5 shadow" id="card_block_total">
                            <div class="mt-3">
                                <div class="pt-4" id="card_auteur_total">
                                    <h5 class="font-italic text-center">Auteurs
                                        : {{ total_author|length }}</h5>
                                </div>
                            </div>
                            <div class="pt-4" id="card_category_total">
                                <h5 class="font-italic text-center">Genres
                                    : {{ total_category|length }}</h5>
                            </div>
                            <div class="pt-4" id="card_serie_total">
                                <h5 class="font-italic text-center">Séries
                                    : {{ total_collection|length }}</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="">
                                <div class="pt-5 shadow" id="card_lend_total">
                                    <h5 class="font-italic text-center mt-4">BD en prêt
                                        : {{ total_lend|length }}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}

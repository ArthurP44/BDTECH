{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block navbar %}
    {% include '/navbar/navbarHome.html.twig' %}
{% endblock %}

{% block body %}

    {# first container welcome #}

    <div class="container">
        <div class="jumbotron mt-5 pt-3 pb-3 pl-1 pr-1" id="jumbo_home">
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4 text-center">
                    <div class="mt-4 shadow font-italic rounded" id="card_hp">
                        {# ajouter app.user.name #}
                        <h2>Bonjour</h2>
                        <h3>Bienvenue sur BDTech'</h3>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </div>

    {# second container carousel + count #}

    <div class="container">
        <div class="jumbotron mb-5" id="jumbo_home">
            <div class="row">
                {# carousel col #}
                <div class="col-md-8">
                    <div class="col d-flex justify-content-center mb-4">
                        <div class="row">
                            <div class="card shadow" style="width: 400px; height: 70px;">
                                <div class="card-body" id="card_hp">
                                    <h5 class="card-title font-italic text-center">Derniers ajouts : </h5>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <div class="row mb-4">
                            <div id="carouselExampleControls" class="carousel slide shadow-lg" data-ride="carousel">
                                <div class="carousel-inner" id="card_hp">
                                    {% for bd in bds %}
                                        <div class="carousel-item {% if loop.first %} active {% endif %}" >
                                            <img class="d-block w-100 p-2" src="/uploads/covers/{{ bd.filename }}" alt="{{ bd.slug }}" style="width: 380px; height: 500px" >
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                   data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                   data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {# counts col#}
                <div class="col-md-4">
                    <div class="row mt-5 mb-5">
                        <div class="col-md d-flex justify-content-center">
                            <div class="card shadow" style="width: 180px; height: 70px;">
                                <div class="card-body" id="card_hp">
                                    <h5 class="card-title font-italic text-center">Bds : {{ total_bd|length }}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md d-flex justify-content-center">
                            <div class="card shadow" style="width: 180px; height: 70px;">
                                <div class="card-body" id="card_hp">
                                    <h5 class="card-title font-italic text-center">Auteurs : {{ total_author|length }}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md d-flex justify-content-center">
                            <div class="card shadow" style="width: 180px; height: 70px;">
                                <div class="card-body" id="card_hp">
                                    <h5 class="card-title font-italic text-center">Genres : {{ total_category|length }}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md d-flex justify-content-center">
                            <div class="card shadow" style="width: 180px; height: 70px;">
                                <div class="card-body" id="card_hp">
                                    <h5 class="card-title font-italic text-center">Séries : {{ total_collection|length }}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md d-flex justify-content-center">
                            <div class="card shadow" style="width: 180px; height: 70px;">
                                <div class="card-body" id="card_hp">
                                    <h5 class="card-title font-italic text-center">BD en prêt : {{ total_lend|length }}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

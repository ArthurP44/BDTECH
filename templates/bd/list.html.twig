{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="mt-5 pt-0 pb-3">
            <div class="row">
                {% for bd in bds %}
                    <div class="col-md-3 d-flex justify-content-center">
                        <a class="btn" href="{{ path('bd_show', {'slug': bd.slug}) }}">
                            <div class="card mt-3 shadow" style="max-width: 15em; max-height: 24em" id="card-list">
                                <div class="card-body pt-3 pl-3 pr-3 pb-0" style="width: 15em; height: 21em;">
                                    <img src="/uploads/covers/{{ bd.filename }}" alt="bd cover"
                                         style="height: 17em; width: 13em">
                                    <h6 class="card-title mt-1">{{ bd.number ? bd.number ~'. '~ bd.title : bd.title }}</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="pagination mt-4">
            {{ knp_pagination_render(bds) }}
        </div>
    </div>
{% endblock %}
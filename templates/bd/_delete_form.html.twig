<form method="post" action="{{ path('bd_delete', {'slug': bd.slug}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette BD ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bd.id) }}">
    <button class="btn">Delete</button>
</form>

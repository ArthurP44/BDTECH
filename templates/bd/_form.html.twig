<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col">
                {{ form_start(form) }}
                <div class="row">
                    <div class='col-md-2'>{{ form_row(form.number) }}</div>
                    <div class='col-md-10'>{{ form_row(form.title) }}</div>
                </div>
                <div class="row">
                    <div class='col-md-12'>{{ form_row(form.category) }}</div>
                </div>
                <div class="row">
                    <div class='col-md-12'>{{ form_row(form.authors) }}</div>
                </div>
                <div class="row">
                    <div class='col-md-12'>{{ form_row(form.collection) }}</div>
                </div>
                <div class="row">
                    <div class='col-md-6'>{{ form_row(form.edition) }}</div>
                    <div class='col-md-6'>{{ form_row(form.collected_works) }}</div>
                </div>
                <div class="row">
                    <div class='col-md-6'>{{ form_row(form.coverFile) }}</div>
                    <div class='col-md-3'>{{ (form_label(form.creation_date)) }}
                        {{ form_widget(form.creation_date['day'],{'value' : '1', 'attr':{'style':'display:none'}}) }}
                        {{ form_widget(form.creation_date['month'],{'value' : '1', 'attr':{'style':'display:none'}}) }}
                        {{ form_widget(form.creation_date['year']) }}
                    </div>
                    <div class='col-md-3'>{{ form_label(form.owned_bd_date) }}
                        {{ form_widget(form.owned_bd_date['day'], {'value' : '1', 'attr':{'style':'display:none'}}) }}
                        {{ form_widget(form.owned_bd_date['month'],{'value' : '1', 'attr':{'style':'display:none'}}) }}
                        {{ form_widget(form.owned_bd_date['year']) }}
                    </div>
                </div>
                <div class="row">
                    <div class='col-md-6'>{{ form_row(form.isbn) }}</div>
                    <div class='col-md-6'>{{ form_row(form.value) }}</div>
                </div>
                {{ form_widget(form) }}
                <div class="row mt-5 d-flex justify-content-center">
                    <button class="btn btn-outline-success mr-4 ml-3">{{ button_label|default('Enregistrer') }}</button>
                    <a class="btn btn-outline-primary"  href="{{ path('bd_index') }}">Retour</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>


